---
interface Props {
  title: {
    text: string;
    license: string;
    description: string;
    image: string;
    link: string;
  };
}

const {title} = Astro.props;
---

{
  title.map((item) => (
    <div class="col-lg-4 col-12 mt-lg-3 mt-3">
      <a href={item.link}>
        <div class="card border-0 ">
          <div class="card-head p-3" style={`background-image: url(${item.image});`}>
            <div class="row">
              <div class="col">
                <p class="card-license">{item.license}</p>
              </div>
            </div>
          </div>
          <div class="card-body">
            <p class="card-title text-black">
              {item.text} <span>- {item.description}</span>
            </p>
          </div>
        </div>
      </a>
    </div>
  ))
}

<style>
  .card {
    height: 100%;
    transition: all 0.3s ease-in-out;
  }
  .card:hover {
    box-shadow: -32px 48px 60px 0px rgba(22, 23, 28, 0.04);
    transition: all 0.3s ease-in-out;
    scale: 1.01;
  }
  .card-head {
    border-radius: 12px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding-bottom: calc((100% / 16) * 9) !important;
  }
  .card-license {
    color: #fbfaff;
    background-color: var(--brand);
    display: inline-block;
    border-radius: 50px;
    padding: 6px 12px;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px; /* 171.429% */
    transition: all 0.3s ease-in-out;
  }

  .card-license:hover {
    background-color: var(--brand-dark);
  }

  .card-title {
    color: var(--brand) !important;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 30px; /* 150% */
    text-transform: capitalize;
  }

  .card-title span {
    color: var(--gray-700);
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: 30px;
    text-transform: capitalize;
  }
</style>
