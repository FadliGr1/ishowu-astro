---
interface Props {
  title: {
    name: string;
    website: string;
    testimonial: string;
    image: string;
  };
}

const {title} = Astro.props;
---
{title.map((item) => (
<div class="col-lg-6 col-12">
  <div class="card border-0">
    <div class="row d-flex align-items-center">
      <div class="col-5">
        <img src={item.image} alt="" class="img-fluid" />
      </div>
      <div class="col-7">
        <img src="./testimonial/review.svg" alt="" class="img-fluid testimonial-start" />
        <p class="my-lg-3 mt-2 testimonial-text">{item.testimonial}</p>
        <p class="testimonial-name">{item.name}<span class="testimonial-website ms-2">{item.website}</span></p>
      </div>
    </div>
  </div>
</div>
)) }


<style>
  .testimonial-text {
    color: var (--gray-900);
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;
    text-align: justify;
  }

  .testimonial-name {
    color: var(--gray-900)
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 26px;
  }
  
  .testimonial-website {
    color : var(--gray-700);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 26px; 
    cursor: pointer;
  }

  @media only screen and (max-width: 768px) {
    .testimonial-start {
        height: 10px;
    }
    .testimonial-text {
      font-size: 14px;
      line-height: 14px;
      text-align: justify;
    }

    .testimonial-name {
      font-size: 14px;
      line-height: 24px;
    }

    .testimonial-website {
      font-size: 14px;
      line-height: 24px;
    }
  }
</style>
